<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sport</th>
    <th>Location</th>
    <th>Number of people</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= game.sport %></td>
    <td><%= game.location %></td>
    <td><%= game.number_of_people %></td>
    <td><%= game.user.name_with_initial %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

